<!-- Validation failure messages -->
<% if @tags_restaurant.errors.any? %>
  <% @tags_restaurant.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Tags Restaurant #<%= @tags_restaurant.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_tags_restaurant/<%= @tags_restaurant.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for restaurant_id -->
      <div class="form-group">
        <label for="restaurant_id" class="control-label">
          Restaurant
        </label>

        <%= select_tag(:restaurant_id, options_from_collection_for_select(Restaurant.all, :id, :name, @tags_restaurant.restaurant_id), :class => "form-control") %>
      </div>

      <!-- Label and input for tags_id -->
      <div class="form-group">
        <label for="tags_id" class="control-label">
          Tags
        </label>

        <%= select_tag(:tags_id, options_from_collection_for_select(Tag.all, :id, :type, @tags_restaurant.tags_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Tags Restaurant
      </button>
      or
      <a href="/tags_restaurants/<%= @tags_restaurant.id %>">Cancel</a>
    </form>
  </div>
</div>
